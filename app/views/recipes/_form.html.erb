<%= render partial: 'recipes/errors', locals: {recipe: @recipe} %>

<div class="container">
  <%= form_for [user, recipe] do |f| %>
    <div class="form-group">
      <%= f.label "Name", class: "font-weight-bold" %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label "Description", class: "font-weight-bold" %>
      <%= f.text_area :description, class: 'form-control' %>
    </div>

    <%= f.label "Ingredients", class: "font-weight-bold" %>
    <div class="form">
      <%= f.fields_for :quantities do |q| %>
        <%= q.label :amount, class: "font-weight-normal" %>
        <%= q.text_field :amount, class: 'form-control' %>
        <%= q.fields_for :ingredient do |i| %>
          <%= i.label :name, class: "font-weight-normal" %>
          <%= i.text_field :name, class: 'form-control' %>
        <% end %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label "Instructions", class: "font-weight-bold" %>
      <%= f.text_area :instructions, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
